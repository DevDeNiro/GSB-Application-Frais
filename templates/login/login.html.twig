<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css" integrity="sha384-zCbKRCUGaJDkqS1kPbPd7TveP5iyJE0EjAuZQTgFLD2ylzuqKfdKlfG/eSrtxUkn" crossorigin="anonymous">
  
    <link href="{{asset ('styles/login.css') }}" rel="stylesheet"/>
    <link rel="shortcut icon" href="{{asset ('images/logo-gsb.png') }}" type="image/x-icon">  
    
    <title> Formulaire de connexion : GSB </title>
</head>

{% block body %}
	<div class="container_fluid test">
		<div class="contact-box">
        <div> <img src="{{asset ('images/img_accueil.png') }}" class="left"> </div>
        <div class="right">
            <h2>Connexion</h2>
            <form method="post">

            <input type="text" value="{{ last_username }}" name="username" placeholder="Identifiant" id="inputUsername" class="field" autocomplete="username" required autofocus>
            <input type="password" name="password" placeholder="Mot de passe" id="inputPassword" class="field" autocomplete="current-password" required>

            <input class="btn" type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}">
                <button class="btn btn-success" type="submit">Se connecter</button>

            {% if error %}
                <div class="mt-3">
                    <div class="alert alert-danger p-3 mb-2 bg-danger text-white" role="alert">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                </div>
            {% endif %}
			</div>
		</div>
	</div>
</form>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">

{% endblock %}
</html>